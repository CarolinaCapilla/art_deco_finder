<div class="container">
  <h2>My bookings</h2>
  <% if @bookings.count > 0 %>
    <% @bookings.each do |booking| %>
      <p>Start Date: <%= booking.start_date.strftime('%d-%m-%Y') %></p>
      <p>End Date: <%= booking.end_date.strftime('%d-%m-%Y')  %></p>
      <p>Artwork Title: <%= booking.item.title %></p>
      <p>Category: <%= booking.item.category %></p>
      <p>Description: <%= booking.item.description %></p>
      <p>Price: Â£<%= booking.item.price %></p>
      <%= link_to "Cancel Booking", booking_path(booking), method: :delete, data: {confirm: "Are you sure you want to cancel this booking?"} %>
      <hr>
    <% end %>
  <% else %>
    <p>No bookings so far, time to have a look at some awesome Artwork!</p>
  <% end %>
  <%= link_to "Back", root_path %>

</div>
